<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivCerrar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/equisr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="28dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Actividad"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Estas seguro que deseas editar esta Actividad?"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etEditarTitulo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Título"
            android:inputType="textCapSentences"
            android:background="@drawable/edit_text_border"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etEditarDescripcion"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:hint="Descripción"
            android:inputType="textCapSentences"
            android:gravity="top"
            android:background="@drawable/edit_text_border"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etEditarFecha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="Fecha"
            android:inputType="number"
            android:background="@drawable/edit_text_border"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etEditarLugar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="Lugar"
            android:inputType="textCapSentences"
            android:background="@drawable/edit_text_border"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etEditarResponsables"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="Responsables"
            android:inputType="textCapWords|textPersonName"
            android:background="@drawable/edit_text_border"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarCambios"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:text="Guardar Cambios"
                android:backgroundTint="#03683E"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>