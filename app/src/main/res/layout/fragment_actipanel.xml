<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ActiPanel"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#004225"
            android:layout_marginTop="16dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona a tu necesidad"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp" />

        <!-- Cuadros en GridLayout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Botón Gestionar Asistentes -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_gestion_asistentes"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/miBotton1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/selector_boton"
                    android:elevation="6dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_asistentes"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="GESTIONAR\nASISTENTES"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Lista Actividades -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_lista_actividades"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/miBotton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/selector_boton"
                    android:elevation="6dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_lista" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="LISTA\nACTIVIDADES"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Actividades Promocionadas -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_actividades_promocionadas"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/miBotton3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/selector_boton"
                    android:elevation="6dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_promocion"
                        android:tint="#E6AC00"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ACTIVIDADES\nPROMOCIONADAS"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón Recordatorio -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_recordatorio"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/miBotton4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/selector_boton"
                    android:elevation="6dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_recordatorio" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="RECORDATORIO"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>
</ScrollView>
