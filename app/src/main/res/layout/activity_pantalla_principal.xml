<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/colorB"
    tools:context=".PantallaPrincipal">

    <!-- Logo -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logoprincipal"
        android:layout_marginBottom="20dp"/>

    <!-- Título -->
    <TextView
        android:id="@+id/PanasCoop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PANASCOOP"
        android:textSize="48sp"
        android:textColor="@color/tituloV"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Subtítulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a Panascoop, tu plataforma confiable para gestionar y conectar con tu cooperativa."
        android:textSize="16sp"
        android:textColor="@color/mensajes"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:maxWidth="300dp"/>

    <!-- Botón de Registrar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:layout_marginBottom="16dp"/>

    <!-- Botón de Iniciar Sesión con borde -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:text="Iniciar sesión"
        android:textAllCaps="false"
        android:textColor="@color/tituloV"
        android:background="@drawable/button_border"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

</LinearLayout>