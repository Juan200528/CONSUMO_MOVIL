<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCF0C9"/> <!-- Color cuando estÃ¡ seleccionado -->
            <stroke android:width="2dp" android:color="#CCF0C9"/>
            <padding android:left="2dp" android:top="1dp" android:right="2dp" android:bottom="2dp"/>
            <corners android:radius="34dp" />
            <!-- Borde verde -->
            <stroke
                android:width="2dp"
                android:color="@color/botonBorde" />
        </shape>
    </item>
    <!-- Estado no seleccionado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorB"/> <!-- Color por defecto -->
            <stroke android:width="2dp" android:color="@color/colorB"/>
            <padding android:left="2dp" android:top="1dp" android:right="2dp" android:bottom="2dp"/>
            <corners android:radius="34dp" /><!-- Borde verde -->
            <stroke
                android:width="2dp"
                android:color="@color/mensajes" />
        </shape>
    </item>
</selector>